<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.w5d2mvprxjava.view.mainactivity.MainActivity"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4">

        <Button
            android:id="@+id/btnJust"
            android:text="JUST"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnRange"
            android:text="RANGE"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnRepeat"
            android:text="Repeat"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnMap"
            android:text="Map"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnScan"
            android:text="SCAN"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnBuffer"
            android:text="Buffer"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnTake"
            android:text="Take"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnSkip"
            android:text="Skip"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnDebounce"
            android:text="DeBounce"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnStartwith"
            android:text="Startwith"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnCombine"
            android:text="Combine"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnMerge"
            android:text="Merge"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnSort"
            android:text="Sort"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnConcat"
            android:text="Concat"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/btnReduce"
            android:text="Reduce"
            android:layout_height="100sp"
            android:layout_width="wrap_content" />

    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Init Value"
        android:layout_marginTop="10sp"
        android:textAlignment="center"
        android:id="@+id/tvObserver"/>

</LinearLayout>
